

 <div class="col">
<div class="card h-100">

    
<img src="make.png" alt="Avatar" class="avatar">

    <div class="card-body" onclick="window.location.replace('/question?questionId=<%=question.questionId%>')">
      <h5 class="card-title"><% if(question.user){ %><%= question.user.name %><% }else{ %>Anonymous user<% } %></h5>
      <p class="card-text"><%= question.question %></p>
      <span class="badge rounded-pill bg-primary">
        Replys <span class="badge bg-secondary"><% if(question.replys){ %><%= question.replys.length %><% } %></span>
    </span>
    <span class="badge rounded-pill bg-secondary">
        Upvotes <span class="badge bg-secondary"><% if(question.Upvotes){ %><%= question.upvotes.length %><% } %></span>
    </span>
    </div>
    <% if(user){ %>
      <div class="input-group mb-3">
        <form action="/reply?userId=<%= user.userId %>&targetUserId=<%= question.userId %>&questionId=<%= question.questionId %>" method="POST">
        <textarea name="reply" type="text" class="form-control" placeholder="Answer this question" aria-label="Recipient's username" aria-describedby="button-addon2"></textarea>
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Submit</button>
        </form>
      </div>
    <% } %>
    
      
  </div>
</div>